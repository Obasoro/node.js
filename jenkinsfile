pipeline {
    agent any
    options {
        // Timeout counter starts AFTER agent is allocated
        timeout(time: 1, unit: 'SECONDS')
    }
    stages {
        stage('World') {
            steps {
                echo 'Welcome!!! Hello World'
            }
        }

       stage('Africa') {
            steps {
                echo 'Welcome to the land of the First'
            }
        }
       stage('West Africa') {
            steps {
                echo 'Welcome to West Africa'
            }
      }

      stage('Nigeria') {
            steps {
                echo 'Welcome to Nigeria, Largest Black Nation in World'
            }
        }
}
}
